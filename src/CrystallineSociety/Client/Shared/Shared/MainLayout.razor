@namespace CrystallineSociety.Client.Shared
@inherits LayoutComponentBase

<CascadingValue Value="@_appStateDto" Name="AppState">
    <Header OnToggleMenu=ToggleMenuHandler />

    @if (_isUserAuthenticated)
    {
    <NavMenu @bind-IsMenuOpen=_isMenuOpen />
    }

    <div class="main @(_isUserAuthenticated ? "main--authenticated" : null)">
        <div>
            <AppErrorBoundary>
                @Body
            </AppErrorBoundary>
        </div>
        <Footer />
    </div>

    <MessageBox />
</CascadingValue>
